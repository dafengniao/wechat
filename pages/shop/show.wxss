.container{
	background:#f1f1f1;
}
.art-header{
	font-size:0;
}
.art-img{
	width:750rpx;
	height: 422rpx;
}
.art-title{
	text-align:center;
	padding:14rpx 0;
	font-size:32rpx;
	color:#222;
	background:#fff;
}
.art-price{
	font-size:28rpx;
	color:#f36;
	text-align:center;
	padding:4rpx 0 10rpx;
	background:#fff;
}
.flex-wrap{
	display:flex;
	flex-direction:row;
	height:60rpx;
	border-top:1px solid rgba(0,0,0,0.1);
	background:#fff;
}
.flex-wrap .mesg{
	height:60rpx;
	width:250rpx;
	font-size:24rpx;
	color:#666;
	text-align:center;
	line-height:60rpx;
}
.flex-wrap .mesg image{
	width:28rpx;
	height:28rpx;
	vertical-align: middle;
	margin-right:8rpx;
}
.btn-area{
	position:relative;
	background:#fff;
	margin:10rpx 0 16rpx;
	padding:30rpx 20rpx;
	background:#fff;
}
.btn-area text{
	font-size:28rpx;
	color:#666;
}
.btn-area image{
	width:28rpx;
	height:28rpx;
	position:absolute;
	right:20rpx;
	top:50%;
	margin-top:-14rpx;
}
.content{
	height:1334rpx;
	width:750rpx;
	background:rgba(0,0,0,0.6);
	position:fixed;
	top:0;
	left:0;
	z-index:2;
}
.fromes{
	position:absolute;
	bottom:0;
	left:0;
	background:#fff;
	width:750rpx;
	height:1080rpx;
}
.f-top{
	width:750rpx;
	height:254rpx;
	position:absolute;
	top:0;
	left:0;
	background:rgba(0,0,0,0);
}
.f-header{
	padding:20rpx 0 20rpx;
	margin:0 30rpx;
	border-bottom:1px solid rgba(0,0,0,0.1);
}
.banners {
  width: 750rpx;
  height: 422rpx;
}
.banner{
  position: relative;
}

.banner-image{
  width: 100%;
  height: 100%;
}
.skuimg{
	width:160rpx;
	height:160rpx;
	margin-right:20rpx;
}
.f-price{
	vertical-align: bottom;
	display:inline-block;
}
.f-price .price{
	color:#f36;
	font-size:28rpx;
	height:28rpx;
	display:block;
	padding-bottom:14rpx;
}
.f-price .kucun,.f-price .smesg{
	color:#666;
	font-size:24rpx;
	display:block;
	padding:6rpx 0;
}
.fromes .art_close{
	width: 48rpx;
    height: 48rpx;
    position: absolute;
	top:20rpx;
	right:20rpx;
    background: rgba(0,0,0,0.4);
    border-radius: 50%;
}
.fromes .art_close .close{
	width:20rpx;
	height:20rpx;
	margin:14rpx;
}
.sku-list{
	position:relative;
	margin:0 30rpx;
	padding:20rpx 0 30rpx;
	border-bottom:1px solid rgba(0,0,0,0.1);
}
.sku-list .ui.header,.sku-num .ui.header{
	font-size:28rpx;
	color:#666;
}
.sku-num{
	position:relative;
	margin:0 30rpx;
	padding:20rpx 0;
}
.sku-name{
	margin-left:-8rpx;
	margin-top:24rpx;
}
.sku-name .magenta-btn{
	background:rgba(0,0,0,0);
	margin:8rpx;
	font-size:24rpx;
	display:inline-block;
	color:#999;
	border:1px solid #999;

	position : relative ; 
	padding-left : 28rpx ; 
	padding-right : 28rpx ; 
	box-sizing : border-box ;
	text-align : center ; 
	text-decoration : none ; 
	line-height : 2.55555556 ; 
	border-radius : 10rpx ; 
	-webkit-tap-highlight-color : transparent ; 
	overflow : hidden ;
}
.sku-name .magenta-btn.active{
	background:#f36;
	color:#fff;
	border:1px solid #f36;
}
.button-hover{
  background-color:#f36;
}
.other-button-hover{
  background-color:blur;
}
button[type="warn"]{
	color:#fff !important;
	border:1px solid #f36 !important;
	background-color:#f36 !important;
}
.numset{
	margin-top:20rpx;
	font-size:0;
}
.numminus{
	display:inline-block;
	font-size:50rpx;
	width:60rpx;
	height:60rpx;
	text-align:center;
	line-height:60rpx;
	border:1px solid rgba(0,0,0,0.1);
	vertical-align: top;
	border-radius:0 !important;
	background:rgba(0,0,0,0);
}
.sku-shu{
	display:inline-block;
	font-size:32rpx;
	width:80rpx;
	height:60rpx;
	line-height:60rpx;
	text-align:center;
	border-top:1px solid rgba(0,0,0,0.1);
	border-bottom:1px solid rgba(0,0,0,0.1);
	vertical-align: top;
	padding:0 12rpx;
}
.numadd{
	display:inline-block;
	font-size:40rpx;
	width:60rpx;
	height:60rpx;
	text-align:center;
	line-height:60rpx;
	border:1px solid rgba(0,0,0,0.1);
	vertical-align: top;
	border-radius:0;
	background:rgba(0,0,0,0);
}
.numminus.active,.numadd.active{
	background:#f1f1f1;
}
.sku-bot{
	width:750rpx;
	height:80rpx;
	position:fixed;
	left:0;
	bottom:0;
	font-size:0;
}
.sku-cart{
	display:inline-block;
	background:#000;
	width:375rpx;
	height:80rpx;
	text-align:center;
	font-size:28rpx;
	color:#fff;
	line-height:80rpx;
}
.sku-buy{
	display:inline-block;
	background:#f36;
	width:375rpx;
	height:80rpx;
	text-align:center;
	font-size:28rpx;
	color:#fff;
	line-height:80rpx;
}
.btn-brand{
	position:relative;
	background:#fff;
	margin:16rpx 0 16rpx;
	padding:20rpx 20rpx;
	background:#fff;
}
.btn-brand .arrow{
	width:28rpx;
	height:28rpx;
	position:absolute;
	right:20rpx;
	top:50%;
	margin-top:-14rpx;
}
.brandimg{
	width:74rpx;
	height:74rpx;
	border-radius:37rpx;
	border:1px solid rgba(0,0,0,0.1);
}
.btn-brand text{
	font-size:28rpx;
	vertical-align:top;
	display:inline-block;
	height:74rpx;
	line-height:74rpx;
	margin-left:20rpx;
}